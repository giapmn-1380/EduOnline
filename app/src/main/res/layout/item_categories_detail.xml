<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_marginLeft="@dimen/dimen_10"
              android:layout_marginRight="@dimen/dimen_10"
              android:background="?attr/selectableItemBackground"
              android:layout_marginBottom="@dimen/dimen_10"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:id="@+id/ll_on_click_item_category_detail"
              android:layout_height="@dimen/height_item_categories_detail">

    <android.support.v7.widget.CardView
            app:cardCornerRadius="@dimen/dimen_5"
            android:layout_width="@dimen/height_item_categories_detail"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/imv_categories_detail"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/height_item_categories_detail"
                android:layout_height="match_parent"/>

    </android.support.v7.widget.CardView>


    <LinearLayout
            android:padding="@dimen/dimen_10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:textSize="16sp"
                android:id="@+id/tv_category_item_course_name"
                android:ellipsize="marquee"
                android:lines="2"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:text="@string/action_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:ellipsize="marquee"
                android:textSize="14sp"
                android:id="@+id/tv_category_item_course_author"
                android:singleLine="true"
                android:text="Nguyen Cao Ky asdsd efgdfdg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <RelativeLayout
                android:layout_marginTop="@dimen/dimen_5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_course_cost_sale_off"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:text="599.000 Đ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_toRightOf="@id/tv_course_cost_sale_off"
                    android:layout_marginLeft="70dp"
                    android:id="@+id/tv_course_cost"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black_overlay"
                    android:text="@string/money_sample"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>