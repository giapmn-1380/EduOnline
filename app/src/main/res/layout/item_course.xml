<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
            android:id="@+id/item_course_click"
            android:background="?attr/selectableItemBackground"
            android:orientation="vertical"
            android:layout_width="160dp"
            android:layout_height="220dp">

        <ImageView
                android:id="@+id/imv_course"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:scaleType="centerCrop"/>

        <LinearLayout
                android:layout_margin="2dp"
                android:padding="6dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <TextView
                    android:id="@+id/tv_course_title"
                    android:lines="2"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:text="Hoh tu co ban den nang cadfdfdfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <View
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/grey_light"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
            </View>

            <TextView
                    android:ellipsize="marquee"
                    android:textSize="12sp"
                    android:id="@+id/tv_course_author"
                    android:singleLine="true"
                    android:text="Nguyen Cao Ky asdsd efgdfdg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <RatingBar
                        android:stepSize="0.1"
                        android:id="@+id/rating_item_course"
                        android:layout_centerVertical="true"
                        style="?android:attr/ratingBarStyleSmall"
                        android:theme = "@style/RatingBar"
                        android:numStars="5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <ImageView
                        app:srcCompat="@drawable/ic_favorite_heart"
                        android:layout_alignParentRight="true"
                        android:layout_width="12dp"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tv_course_cost_sale_off"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/red"
                        android:text="599.000 Đ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_course_cost"
                        android:textSize="12sp"
                        android:layout_alignParentRight="true"
                        android:textStyle="bold"
                        android:textColor="@color/black_overlay"
                        android:text="@string/money_sample"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>